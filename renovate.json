{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["/^snap/snapcraft\\.yaml$/"],
      "matchStrings": [
        "source: https:\\/\\/services\\.gradle\\.org\\/distributions\\/gradle-(?<currentValue>[\\d\\.]+)-bin\\.zip"
      ],
      "depNameTemplate": "gradle",
      "datasourceTemplate": "gradle-version"
    }
  ]
}
